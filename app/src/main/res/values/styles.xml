<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 对话框显示样式 -->
    <style name="public_Theme_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowAnimationStyle">@style/public_DialogAnimationStyle_y</item>
    </style>

    <!-- dialog动画效果 -->
    <style name="public_DialogAnimationStyle_y" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_y_translate_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_y_translate_exit</item>
    </style>

    <!--公共对话框title-->
    <style name="dialog_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/public_text_color</item>
        <item name="android:textSize">@dimen/font_small_x</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--公共对话框btn-->
    <style name="dialog_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_small_x</item>
    </style>
<!--    公共返回-->
    <style name="ExistViewStyle">
        <item name="exist_background">@color/exist_bg_color</item>
        <item name="back_view">@mipmap/icon_back_no_bg</item>
        <item name="title_name_color">@color/exist_title_color</item>
        <item name="right_name_color">@color/exist_right_color</item>
    </style>


</resources>
